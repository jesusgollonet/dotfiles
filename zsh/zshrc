#!/bin/zsh

autoload -Uz promptinit
promptinit

autoload -Uz compinit
compinit

prompt off

# history search with arrows 
autoload -U up-line-or-beginning-search
autoload -U down-line-or-beginning-search
zle -N up-line-or-beginning-search
zle -N down-line-or-beginning-search

# Enable Ctrl-x-e to edit command line
autoload -U edit-command-line
# # Emacs style
zle -N edit-command-line
bindkey '^xe' edit-command-line
bindkey '^x^e' edit-command-line

# ignore case in completion
zstyle ':completion:*' matcher-list '' 'm:{a-z}={A-Z}' '+m:{A-Z}={a-z}'

. ~/.dotfiles/zsh/keys
. ~/.dotfiles/zsh/aliases
. ~/.dotfiles/zsh/functions
. ~/.dotfiles/zsh/setopt
. ~/.dotfiles/tmux/aliases
. ~/.bin/z.sh

HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.history



# add bin to path
export PATH=~/.bin:$PATH
export PATH=~/.dotfiles/bin:$PATH

#source ~/.dotfiles/zsh/lib/zsh-git-prompt/zshrc.sh
# an example prompt
PROMPT='%B%#%b '
# enable fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# source google cloud sdk files
[ -f ~/.google-cloud-sdk/completion.zsh.inc ] && source ~/.google-cloud-sdk/completion.zsh.inc
[ -f ~/.google-cloud-sdk/path.zsh.inc ] && source ~/.google-cloud-sdk/path.zsh.inc
# Setting ag as the default source for fzf
export FZF_DEFAULT_COMMAND='find .'
# To apply the command to CTRL-T as well
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# load z

# tabtab source for serverless package
# uninstall by removing these lines or running `tabtab uninstall serverless`
[[ -f /Users/jgb/Work/resn/projects/adidas-rip-ready/dev/adidas-athletics-api/node_modules/tabtab/.completions/serverless.zsh ]] && . /Users/jgb/Work/resn/projects/adidas-rip-ready/dev/adidas-athletics-api/node_modules/tabtab/.completions/serverless.zsh
# tabtab source for sls package
# uninstall by removing these lines or running `tabtab uninstall sls`
[[ -f /Users/jgb/Work/resn/projects/adidas-rip-ready/dev/adidas-athletics-api/node_modules/tabtab/.completions/sls.zsh ]] && . /Users/jgb/Work/resn/projects/adidas-rip-ready/dev/adidas-athletics-api/node_modules/tabtab/.completions/sls.zsh
# tabtab source for slss package
# uninstall by removing these lines or running `tabtab uninstall slss`
[[ -f /Users/jgb/Work/resn/projects/adidas-loop-event/test/01-passcode-to-contentful/node_modules/tabtab/.completions/slss.zsh ]] && . /Users/jgb/Work/resn/projects/adidas-loop-event/test/01-passcode-to-contentful/node_modules/tabtab/.completions/slss.zsh